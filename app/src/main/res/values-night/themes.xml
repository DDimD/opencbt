        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorDark</item>
        <item name="colorPrimaryDark">@color/primaryDarkColorDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorDark</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorDark</item>
        <item name="android:windowBackground">@color/n_forBack</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">@style/Widget.AppTheme.Dark.AppBar</item>
        <item name="materialButtonStyle">@style/Widget.AppTheme.Night.OutlinedButton</item>
        <item name="materialCardViewStyle">@style/Widget.AppTheme.Night.MaterialCardView</item>
    </style>

    <style name="Widget.AppTheme.Night.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton" >
