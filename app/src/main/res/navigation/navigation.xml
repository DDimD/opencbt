<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/rvFragment">
    <fragment
        android:id="@+id/rvFragment"
        android:name="com.vva.androidopencbt.recordslist.RvFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_rvFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_rvFragment_to_statisticFragment"
            app:destination="@id/statisticFragment" />
        <action
            android:id="@+id/action_rvFragment_to_newRecordActivity"
            app:destination="@id/newRecordActivity" />
        <action
            android:id="@+id/action_rvFragment_to_settingsActivity"
            app:destination="@id/settingsActivity" />
        <action
            android:id="@+id/action_rvFragment_to_saveHTMLActivity"
            app:destination="@id/saveHTMLActivity" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.vva.androidopencbt.AboutFragment"
        android:label="@string/title_about" />
    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.vva.androidopencbt.statistic.StatisticFragment"
        android:label="@string/action_statistics"
        tools:layout="@layout/fragment_statistic" />
    <activity
        android:id="@+id/settingsActivity"
        android:name="com.vva.androidopencbt.SettingsActivity"
        android:label="@string/title_activity_settings" />
    <activity
        android:id="@+id/newRecordActivity"
        android:name="com.vva.androidopencbt.NewRecordActivity"
        android:label="@string/title_newrecord"
        tools:layout="@layout/activity_new_record" />
    <activity
        android:id="@+id/saveHTMLActivity"
        android:name="com.vva.androidopencbt.SaveHTMLActivity"
        android:label="@string/savehtml_button_save"
        tools:layout="@layout/activity_save_html" />
</navigation>